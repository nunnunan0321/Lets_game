<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/jokbo_board"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/betting_board"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <GridLayout
        android:id="@+id/betting_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:id="@+id/btn_betting_call"
            android:text="하프" />
        <Button
            android:id="@+id/btn_betting_die"
            android:text="다이" />
        <Button
            android:id="@+id/btn_betting_ddadang"
            android:text="따당" />
        <Button
            android:id="@+id/btn_betting_check"
            android:text="체크" />
        <Button
            android:id="@+id/btn_betting_half"
            android:text="하프" />
        <Button
            android:id="@+id/btn_betting_bbing"
            android:text="삥" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>